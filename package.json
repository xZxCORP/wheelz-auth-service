{
  "name": "@wheelz/auth-service",
  "description": "",
  "type": "module",
  "engines": {
    "node": ">= 20.11.0"
  },
  "scripts": {
    "start:docker": "npm run migrate:up && npm run dev",
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "lint": "eslint . --fix",
    "test": "glob -c \"tsx --test --test-reporter spec \" \"./tests/**/*.spec.ts\"",
    "migrate:up": "tsx src/infrastructure/kysely/cli/migrate-up.ts",
    "migrate:down": "tsx src/infrastructure/kysely/cli/migrate-down.ts",
    "generate:user": "openapi typegen https://wheelz-user.zcorp.ovh/openapi.json > src/types/user.d.ts",
    "generate:all": "npm run generate:user"
  },
  "dependencies": {
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@ts-rest/fastify": "^3.51.0",
    "@ts-rest/open-api": "^3.51.0",
    "@zcorp/wheelz-contracts": "latest",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.4",
    "mysql2": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@swc/core": "^1.5.25",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.14.1",
    "@zcorp/eslint-config": "latest",
    "@zcorp/prettier-config": "latest",
    "@zcorp/shared-typing-wheelz": "latest",
    "@zcorp/tsconfig": "latest",
    "eslint": "^8.57.0",
    "glob": "^10.4.1",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.1",
    "tsx": "^4.12.0",
    "typescript": "^5.4.5"
  }
}
